{
  "manifest_version": 3,
  "name": "Kana AI Learning Assistant",
  "version": "1.0.0",
  "description": "An intelligent floating AI assistant that helps with learning on LMS platforms through contextual explanations and guidance.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.instructure.com/*",
    "*://*.canvas.com/*",
    "*://*.blackboard.com/*",
    "*://*.moodle.org/*",
    "*://*.schoology.com/*",
    "*://*.holbertonschool.com/*",
    "*://*.alustudent.com/*",
    "*://intranet.alustudent.com/*",
    "*://localhost/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instructure.com/*",
        "*://*.canvas.com/*",
        "*://*.blackboard.com/*",
        "*://*.moodle.org/*",
        "*://*.schoology.com/*",
        "*://*.holbertonschool.com/*",
        "*://*.alustudent.com/*",
        "*://intranet.alustudent.com/*",
        "*://*/*"
      ],
      "js": ["content.js"],
      "css": ["kana-styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Kana AI Learning Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": ["kana-styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html"
}
